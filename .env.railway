# Railway Environment Variables for Laravel Restaurant Hub

# Application
APP_NAME="Laravel Restaurant Hub"
APP_ENV=production
APP_KEY=base64:YOUR_APP_KEY_HERE
APP_DEBUG=false
APP_URL=https://techblog-pro-laravel-production.up.railway.app

# Database
DB_CONNECTION=sqlite
DB_DATABASE=/app/database/database.sqlite

# Cache & Session
CACHE_STORE=file
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Queue
QUEUE_CONNECTION=database

# Mail (optional)
MAIL_MAILER=log

# Logging
LOG_CHANNEL=stderr
LOG_LEVEL=error

# Railway specific
NIXPACKS_BUILD_CMD="composer install --no-dev --optimize-autoloader && npm ci && npm run build"
NIXPACKS_START_CMD="php artisan migrate --force && php artisan config:cache && php artisan route:cache && php artisan serve --host=0.0.0.0 --port=\$PORT"
